@page "{id:guid}"
@model LogiDocs.Web.Pages.TransportDetailsModel
@{
    ViewData["Title"] = "Transport Details";
}

<h2>Transport Details</h2>

@if (Model.Error != null)
{
    <p style="color:red">@Model.Error</p>
}
else
{
    <p><b>Transport:</b> @Model.TransportRef</p>

    <hr />

    <h4>Upload New Document</h4>

    <form method="post" enctype="multipart/form-data" class="row g-3 mb-4">
        <input type="hidden" name="TransportId" value="@Model.Id" />

        <div class="col-md-4">
            <label class="form-label">File</label>
            <input type="file" name="UploadFile" class="form-control" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Document Type</label>
            <select name="Type" class="form-select">
                <option value="0">CMR</option>
                <option value="1">Invoice</option>
                <option value="2">Customs</option>
                <option value="3">Other</option>
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label">Uploaded By (temporary)</label>
            <input type="text" name="UploadedByUserId"
                   class="form-control"
                   value="11111111-1111-1111-1111-111111111111" />
        </div>

        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-success w-100">
                Upload
            </button>
        </div>
    </form>

    <hr />

    <h4>Documents</h4>

    @if (Model.Documents == null || Model.Documents.Count == 0)
    {
        <p>No documents for this transport.</p>
    }
    else
    {
        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>File Name</th>
                    <th>Type</th>
                    <th>Hash</th>
                    <th>Blockchain</th>
                    <th>Tx</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model.Documents)
                {
                    <tr>
                        <td>@d.OriginalFileName</td>

                        <td>@d.Type</td>

                        <td style="max-width:350px; overflow:hidden; text-overflow:ellipsis; white-space:nowrap;">
                            @d.Sha256
                        </td>

                        <td>
                            @if (string.IsNullOrWhiteSpace(d.ChainStatus))
                            {
                                <span class="badge bg-secondary">Not registered</span>
                            }
                            else if (d.ChainStatus == "Registered")
                            {
                                <span class="badge bg-success">Registered</span>
                            }
                            else if (d.ChainStatus == "Pending")
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else if (d.ChainStatus == "Failed")
                            {
                                <span class="badge bg-danger">Failed</span>
                                @if (!string.IsNullOrWhiteSpace(d.ChainError))
                                {
                                    <div class="text-danger small">@d.ChainError</div>
                                }
                            }
                            else
                            {
                                <span class="badge bg-info text-dark">@d.ChainStatus</span>
                            }
                        </td>

                        <td style="max-width:220px; overflow:hidden; text-overflow:ellipsis; white-space:nowrap;">
                            @(string.IsNullOrWhiteSpace(d.BlockchainTxId) ? "-" : d.BlockchainTxId)
                        </td>

                        <td class="d-flex gap-2">
                            <a class="btn btn-sm btn-outline-primary"
                               href="http://localhost:5006/api/Documents/@d.Id/download"
                               target="_blank">
                                Download
                            </a>

                            @if (string.IsNullOrWhiteSpace(d.BlockchainTxId))
                            {
                                <form method="post">
                                    <input type="hidden" name="RegisterDocumentId" value="@d.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-success">
                                        Register
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}